# =====================================================
# Python Upgrader Bot - Application Configuration
# =====================================================
#
# This file contains application-specific settings
# These settings control the behavior of the migration process

# =====================================================
# Python Version Configuration
# =====================================================

# Target Python version for migration analysis
TARGET_PYTHON_VERSION=3.11

# =====================================================
# Analysis Configuration
# =====================================================

# Maximum number of files to analyze in a single batch
MAX_FILES_TO_ANALYZE=20

# Maximum size of code samples sent to LLM for analysis (in characters)
MAX_CODE_SAMPLE_SIZE=5000

# Number of files to process together in AI analysis
BATCH_SIZE_FOR_AI_ANALYSIS=5

# AI analysis confidence threshold (0.0 to 1.0)
AI_CONFIDENCE_THRESHOLD=0.7

# Include issues with low confidence scores in results
INCLUDE_LOW_CONFIDENCE_ISSUES=false

# =====================================================
# Migration Process Configuration
# =====================================================

# Maximum number of iterations for automated migration
# This is the number of times the system will attempt to fix the same set of errors
MAX_MIGRATION_ITERATIONS=5

# Enable verbose logging during migration process
MIGRATION_VERBOSE_LOGGING=true

# Enable syntax checking after each migration step
ENABLE_SYNTAX_CHECK=true

# Enable import checking after migration
ENABLE_IMPORT_CHECK=false

# =====================================================
# LLM Settings for Migration
# =====================================================

# LLM temperature for migration guidance (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2048

# =====================================================
# Output and Reporting Configuration
# =====================================================

# Enable detailed logging throughout the process
ENABLE_DETAILED_LOGGING=true

# Generate HTML report (in addition to markdown)
GENERATE_HTML_REPORT=false

# Generate diff files showing changes made during migration
GENERATE_MIGRATION_DIFF=true

# Preserve original code formatting when possible
PRESERVE_ORIGINAL_FORMATTING=true

# =====================================================
# Common Target Version Examples
# =====================================================
# TARGET_PYTHON_VERSION=3.8   # Stable, widely supported
# TARGET_PYTHON_VERSION=3.9   # Good balance of features and stability  
# TARGET_PYTHON_VERSION=3.10  # Modern features like match-case
# TARGET_PYTHON_VERSION=3.11  # Latest stable with performance improvements